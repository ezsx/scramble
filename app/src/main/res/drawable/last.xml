<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <solid  />
            <stroke
                android:width="0dip"
                />
            <gradient
                android:type="radial"
                android:gradientRadius="800"
                android:startColor="@color/grey"
                android:endColor="@color/dark_grey"
                android:centerX="0.5"
                android:centerY="0.5">
            </gradient>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <solid  />
            <stroke
                android:width="0dip" />
            <gradient
                android:type="radial"
                android:gradientRadius="800"
                android:startColor="@color/purple_200"
                android:endColor="@color/black"
                android:centerX="0.5"
                android:centerY="0.5">
            </gradient>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>